<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--按钮 + 搜索框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/community_fragment_return"
            android:layout_width="11dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/return_button"/>
        <EditText
            android:id="@+id/edit_community"
            android:layout_width="0dp"
            android:layout_height="@dimen/communicate_edit_height"
            android:layout_weight="1"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/edit_communicate_shape"
            android:textSize="@dimen/communicate_hint"
            android:hint="@string/hint_endiText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--头像-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            fresco:roundingBorderWidth="10dp"
            fresco:roundingBorderColor="@color/white"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/microphone"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_marginStart="7dp"
            android:textColor="@color/white"
            android:text="JASON"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/nickname_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--主要信息体-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/community_fragment_rv"
            tools:listitem="@layout/community_fragment_item"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>